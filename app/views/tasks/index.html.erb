<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Importance</th>
    <th>Due Date</th>
  </tr>

  <% @tasks.each do |t| %>
    <tr>
      <td><%= t.title %></td>
      <td>
        <%= check_box_tag(:status) %>
      </td>
      <td><%= t.imp %></td>
      <td><%= t.date %></td>
      <td><%= link_to 'Show', user_list_task_path(t.list.user, t.list, t), method: :get %></td>
      <td><%= link_to 'Edit', edit_user_list_task_path(t.list.user, t.list, t) %></td>
      <td><%= link_to 'Delete', [t.list.user, t.list, t], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  <%= link_to 'New', new_user_list_task_path %>
  <%= link_to 'Back', user_lists_path %>

</table>
