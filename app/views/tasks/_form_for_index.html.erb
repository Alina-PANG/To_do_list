<% if @tasks %>
<br>
<h3>Incompleted Tasks</h3>
<br><br>
 <table class="table table-striped">
<thead>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Importance</th>
    <th>Due Date</th>
</tr>
</thead>

<tbody>

  <% @tasks.each do |t| %>
<tr>
<div class="row">
    <td><%= t.title %></td>
    <td>Incompleted</td>
      <td><%= t.imp %></td>
      <% if t.date <= Date.today %>
        <td><font color="red"><%= t.date %></font></td>
      <% else %>
          <td><%= t.date %></td>
      <% end %>

      <td><%= link_to 'Show', user_list_task_path(t.list.user, t.list, t), method: :get %></td>
      <td><%= link_to 'Edit', edit_user_list_task_path(t.list.user, t.list, t) %></td>
      <td><%= link_to 'Delete', [t.list.user, t.list, t], method: :delete, data: {confirm: 'Are you sure?'} %></td>

</td>
</tr>
  <% end %>

</tbody>
</table>
<% else %>
No incompleted tasks.
<% end %>
<br>
<div class="btn-group">
   <button type="button" class="btn btn-default"><%= link_to "Rank by Importance", user_list_tasks_path(order: "imp DESC") %></button>
   <button type="button" class="btn btn-default"><%= link_to "Rank by Date", user_list_tasks_path(order: :date) %></button>
   <button type="button" class="btn btn-default"><%= link_to "Rank by completed", user_list_tasks_path(order: :completed) %></button>
 </div>
<br><br>
