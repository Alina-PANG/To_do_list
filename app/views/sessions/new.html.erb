<br><br><br>
<%= form_for(:session, url: login_path) do |f| %>
<div class="form-group">
<div class="form-group">
    <%= f.label :user_name, "User Name", class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :user_name, :placeholder => "User Name", class: "form-control" %>
    </div>
<br><br>
</div>
<div class="form-group">
    <%= f.label :password, "Password", class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
    </div>
<br><br>
</div>
<div class="form-group">
  <div class="col-md-2"></div>
  <div class="col-md-6">
    <%= f.submit :Login, class: "btn btn-default btn-primary col-md-8"  %>
  </div>
</div>

<% end %>

<br><br>
<div class="checkbox">
  <div class="col-md-2"></div>
  <div class="col-md-6">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
</div>

